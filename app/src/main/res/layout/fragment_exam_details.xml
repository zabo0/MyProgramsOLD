<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.ExamProgram.ExamDetailsFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:menu="@menu/top_app_bar_subject_details"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
            app:title="@string/examDetails" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/subject_details_textView_subjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Exam Name"
            android:textSize="22sp"
            android:padding="10dp"
            android:textAlignment="textStart"
            tools:layout_editor_absoluteX="2dp"
            app:drawableStartCompat="@drawable/ic_baseline_edit_note_24"
            android:drawablePadding="10dp"
            app:drawableTint="?attr/colorOnSecondary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textIsExamDone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/examFinished"
                android:textAlignment="textEnd"
                android:drawableEnd="@drawable/ic_baseline_check_24"
                android:layout_weight="1"/>
        </LinearLayout>


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="10dp"
            android:background="?attr/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/whichDayText"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_today_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_whichDay"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/classroom"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_meeting_room_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_classroom"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="203"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/startTime"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_startTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="10:00"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/finishTime"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_filled_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_finishTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="11:00"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/typeOfExam"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_ballot_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_typeOfExam"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="On Line"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/reminderText"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textStart"
                tools:layout_editor_absoluteX="2dp"
                app:drawableStartCompat="@drawable/ic_baseline_alarm_24"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />

            <TextView
                android:id="@+id/exam_details_textView_reminder"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="1 Hour Ago"
                android:textSize="22sp"
                android:padding="10dp"
                android:textAlignment="textEnd"
                tools:layout_editor_absoluteX="2dp"
                android:drawablePadding="10dp"
                app:drawableTint="?attr/colorOnSecondary" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>