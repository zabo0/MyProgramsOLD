<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="0.1">

        <TextView
            android:id="@+id/subject_details_recyclerRow_textView_count"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="1"
            android:textSize="30sp"
            android:gravity="center"
            android:textAlignment="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_margin="5dp"
        android:background="?attr/colorPrimary"
        android:layout_height="match_parent"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/subject_details_recyclerRow_textView_day"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text="Day"
            tools:ignore="NestedWeights" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_details_recyclerRow_textView_timeStart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:text="09:00"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:text="-"/>


            <TextView
                android:id="@+id/subject_details_recyclerRow_textView_timeFinish"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textStart"
                android:textSize="18sp"
                android:text="10:00"/>

        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:id="@+id/subject_details_recyclerRow_textView_class"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:text="class"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:text=" / "/>

            <TextView
                android:id="@+id/subject_details_recyclerRow_textView_typeOfLesson"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAlignment="textEnd"
                android:textSize="13sp"
                android:text="type of subject"/>
        </LinearLayout>



        <TextView
            android:id="@+id/subject_details_recyclerRow_textView_reminder"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textSize="13sp"
            android:text="remind _ hour ago"/>


    </LinearLayout>


</LinearLayout>