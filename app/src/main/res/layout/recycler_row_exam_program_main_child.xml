<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/exam_main_child_recycler_textView_startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12:00"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/exam_main_child_recycler_textView_finishTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textAlignment="center"
            android:text="13:00"/>

    </LinearLayout>

    <View
        android:id="@+id/exam_main_child_recycler_divider"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@color/red"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exam_main_child_recycler_textView_examName"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_weight="2"
                android:textStyle="bold"
                android:text="Exam Name"/>
            <TextView
                android:id="@+id/exam_main_child_recycler_textView_typeOfExam"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="type of exam"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="@string/targetPointText"/>
            <TextView
                android:id="@+id/exam_main_child_recycler_textView_targetPoint"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="60"/>

            <LinearLayout
                android:id="@+id/layoutPoint"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/exam_main_child_recycler_textView_pointText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="@string/point"/>
                <TextView
                    android:id="@+id/exam_main_child_recycler_textView_point"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="60"/>
            </LinearLayout>

            <TextView
                android:id="@+id/exam_main_child_recycler_textView_classroom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="textEnd"
                android:text="classRoom"/>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>